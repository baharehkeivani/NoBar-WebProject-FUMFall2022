<body dir="rtl">
  <!-- ***** Header Area Start ***** -->
  <header class="header-area header-sticky wow slideInDown" data-wow-duration="0.75s" data-wow-delay="0s">
    <div class="container">
      <div class="row">
        <div class="col-12">
          <nav class="main-nav">
            <!-- ***** Logo Start ***** -->
            <a href="dashboard-user.html" class="logo">
              <img height="75px" src="/assets/images/logo.png">
            </a>
            <!-- ***** Logo End ***** -->
            <div class="main-red-button-hover nav-visible"><a href="./driverDashboard">بازگشت</a></div>
          </nav>
        </div>
      </div>
    </div>
  </header>
  <!-- ***** Header Area End ***** -->

  <!-- ***** Profile Start ***** -->
  <div class="container-md" style="margin-top: 150px;">
    <div class="row justify-content-center">
      <div class="col-sm-12 align-self-center">
        <h2 class="mb-4">پروفایل</h2>
        <form id="profile" class="needs-validation" novalidate="">
          <!-- Driver's Info -->
          <h4 class="mb-2">اطلاعات راننده</h4>
          <div class="row">
            <div class="mb-3">
              <label for="name">نام</label>
              <div class="input-group">
                <input type="text" id="name" class="form-control needs-validation" name="name" placeholder="نام"
                  required="">
                <div class="invalid-feedback" style="width: 100%;"> این فیلد یک فیلد الزامی است. </div>
              </div>
            </div>
            <div class="mb-3">
              <label for="email">ایمیل</label>
              <div class="input-group">
                <input type="email" id="email" class="form-control needs-validation" name="email" placeholder="ایمیل"
                  required="">
                <div class="invalid-feedback" style="width: 100%;"> این فیلد یک فیلد الزامی است. </div>
              </div>
            </div>
            <div class="row mb-3">
              <div class="col-6">
                <label for="verificationStatus">وضعیت احراز</label>
                <div class="input-group">
                  <p id="verificationStatus" class="form-control" name="verificationStatus">نامشخص</p>
                </div>
              </div>
              <div class="col-6">
                <label for="driverStatus">وضعیت راننده</label>
                <div class="input-group">
                  <p id="driverStatus" class="form-control" name="driverStatus">نامشخص</p>
                </div>
              </div>
            </div>
            <!-- Car's Info -->
            <h4 class="mb-2">اطلاعات خودرو</h4>
            <div class="row mb-3">
              <div class="col-6">
                <label for="plaqueCityNumber">شماره شهر صادره پلاک</label>
                <div class="input-group">
                  <input type="number" id="plaqueCityNumber" class="form-control needs-validation"
                    name="plaqueCityNumber" placeholder="" required="">
                  <div class="invalid-feedback" style="width: 100%;"> وارد کردن کد شهر صادره پلاک خودرو الزامی است.
                  </div>
                </div>
              </div>
              <div class="col-6">
                <label for="plaque">پلاک</label>
                <div class="input-group">
                  <input type="text" id="plaque" class="form-control needs-validation" name="plaque"
                    placeholder="مثال : 12B342" required="">
                  <div class="invalid-feedback" style="width: 100%;"> وارد کردن پلاک خودرو الزامی است. لطفا ارقام را به
                    صورت کیبورد انگلیسی وارد کنید. </div>
                </div>
              </div>
            </div>
            <div class="mb-3">
              <label for="type">نوع ماشین</label>
              <div class="input-group">
                <input type="text" id="type" class="form-control needs-validation" name="type"
                  placeholder="مثال : وانت نیسان" required="">
                <div class="invalid-feedback" style="width: 100%;">لطفا نوع خودرو خودرو وارد کنید.</div>
              </div>
            </div>
            <div class="mb-3">
              <label for="color">رنگ ماشین</label>
              <div class="input-group">
                <input type="text" id="color" class="form-control needs-validation" name="color"
                  placeholder="مثال : قرمز" required="">
                <div class="invalid-feedback" style="width: 100%;">لطفا رنگ خودرو خودرو وارد کنید.</div>
              </div>
            </div>
            <hr>
            <p id="error8" class="success"></p>
            <div class="row justify-content-center">
              <button class="btn btn-primary btn-lg btn-block m-4" style="width: 100px;" type="submit">ثبت</button>
            </div>
        </form>
      </div>
    </div>
  </div>
  <!-- ***** Profile Us End ***** -->

  <!-- ***** Scripts ***** -->
  <script src="/vendor/jquery/jquery.min.js"></script>
  <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
  <script src="/assets/js/animation.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
  <script src="https://unpkg.com/axios/dist/axios.min.js"></script>


  <!-- order : checking validations-->
  <script>
    (function () {
      'use strict'
      window.addEventListener('load', function () {
        // Fetch all the forms we want to apply custom Bootstrap validation styles to
        var forms = document.getElementsByClassName('needs-validation')
        // Loop over them and prevent submission
        Array.prototype.filter.call(forms, function (form) {
          form.addEventListener('submit', function (event) {
            if (form.checkValidity() === false) {
              event.preventDefault()
              event.stopPropagation()
            }
            form.classList.add('was-validated')
          }, false)
        })
      }, false)
    }())
  </script>

  <!-- load inputs from backend -->
  <script>

    const baseRoute = "http://127.0.0.1:4000/v1";
    window.onload = function () {

      var name = null;
      var email = null;
      var verificationStatus = null;
      var driverStatus = null;
      var plaque = null;
      var plaqueCityNumber = null;
      var type = null;
      var color = null;

      axios.defaults.withCredentials = true;
      axios.get(`${baseRoute}/getDriverProfile`).then((response) => {
        console.log(response);
        document.getElementById('name').value = response.data.data[0].name;
        document.getElementById('email').value = response.data.data[0].email;
        document.getElementById('verificationStatus').value = response.data.data[0].verificationStatus;
        document.getElementById('driverStatus').value = response.data.data[0].driverStatus;
        document.getElementById('plaque').value = response.data.data[0].car.plaque;
        document.getElementById('plaqueCityNumber').value = response.data.data[0].car.plaqueCityNumber;
        document.getElementById('type').value = response.data.data[0].car.type;
        document.getElementById('color').value = response.data.data[0].car.color;

        verificationVar = document.getElementById('verificationStatus')
        verificationVar.innerText = ((verificationStatus== null || !verificationStatus) ? "غیرفعال" : "فعال");
        if (verificationStatus) {
          verificationVar.style.backgroundColor = "rgb(169, 239, 152)";
        } else {
          verificationVar.style.backgroundColor = "rgb(254, 174, 152)";
        }

        driverStatusVar = document.getElementById('driverStatus')
        driverStatusVar.innerText = ((driverStatus== null || !driverStatus) ? "غیرفعال" : "فعال");
        if (driverStatus) {
          driverStatusVar.style.backgroundColor = "rgb(169, 239, 152)";
        } else {
          driverStatusVar.style.backgroundColor = "rgb(254, 174, 152)";
        }

        // document.getElementById('password').value = response.data.datapass;
      })
        .catch((error) => console.log(error));
    };


    const profile = document.getElementById('profile');
    // console.log(orderForm);
    profile.addEventListener('submit', async event => {
      event.preventDefault();

      const formData = new FormData(profile);
      data = {};
      for (const [key, value] of formData) {
        // console.log(key,value);
        // if(key=="orderType" && value==null) {
        //     data[key] = 0;
        // }
        // else 
        data[key] = value;
      }
      axios.defaults.withCredentials = true;
      // if(data.orderType == undefined) 
      //   console.log(data.orderType);
      axios.put(`${baseRoute}/updateDriver`, data).then((response) => {
        //based on responses success an error must be shown or the page must be redirected to dashbord
        // console.log("res ",response);

        let temp = document.getElementById('error8');
        if (!response.data.success) {
          temp.style.display = "block";
          temp.textContent = response.data.message;
        } else {
          temp.style.display = "block";
          temp.textContent = response.data.message;
          location.reload()
        }
      })
        .catch((error) => console.log(error));
    });
  </script>
